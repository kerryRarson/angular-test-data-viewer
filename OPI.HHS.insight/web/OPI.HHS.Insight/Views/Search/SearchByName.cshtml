<div class="container">
    <div class="form-group">
        <form name="searchForm" ng-submit="searchByName()">
            <fieldset ng-disabled="searching">
                <div class="row">
                    <div class="col-md-3">
                        <input type="text" placeholder="Name" ng-model="searchForm.searchName" ng-bind="searchForm.searchName" required class="form-control" />
                    </div>
                    <div class="col-md-1">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                    <div class="col-md-3">
                        <div ng-show="searching"><img src="~/Content/images/progress.gif" />&nbsp; Searching...</div>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">{{ searchResults.length}} HHS Referrals</div>
            <div class="panel-body">
                <table class="table table-striped table-condensed">
                        <tr>
                            <th>Referral</th>
                            <th>Name</th>
                            <th>DOB</th>
                            <th>Gender</th>
                            <th>Race</th>
                            <th>Ethnicity</th>
                        </tr>
                        <tbody>
                            <tr data-ng-repeat="r in searchResults">
                                <td>{{ r.ReferralId }}</td>
                                <td>{{ r.FormattedName }}</td>
                                <td>{{ r.DOB }}</td>
                                <td>{{ r.Gender }}</td>
                                <td>{{ r.Race }}</td>
                                <td>{{ r.Ethnicity }}</td>
                            </tr>
                        </tbody>
                    </table>
            </div>
        </div>
