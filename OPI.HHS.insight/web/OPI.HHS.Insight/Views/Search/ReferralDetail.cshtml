@model OPI.HHS.Insight.Models.ReferralModel
<div class="container" ng-init="init('@Model.ReferralId')">
    <div class="row">
        <h4><span class="label label-default">Referral Id</span><span> @Model.ReferralId</span></h4>
    </div>
    <div class="row">
        <h3> @Model.FormattedName</h3> 
    </div>
    <div class="row">
        <div class="col-md-2">
            <h4><span class="label label-default">DOB</span><span> @Model.DOB</span></h4>
        </div>
        <div class="col-md-2">
            <h4><span class="label label-default">Gender</span><span> @Model.Gender</span></h4>
        </div>
        <div class="col-md-2">
            <h4><span class="label label-default">Race</span><span> @Model.Race</span></h4>
        </div>
        <div class="col-md-2">
            <h4><span class="label label-default">Ethnicity</span><span> @Model.Ethnicity</span></h4>
        </div>
    </div>

    <div class="row" style="padding-top:8px;">
        <div class="panel panel-default">
            <div class="panel-heading">{{ addresses.length}} Addresses</div>
            <div class="panel-body">
                <table class="table table-striped table-condensed">
                    <tr>
                        <th>Type</th>
                        <th>Address</th>
                        <th>Phone</th>
                    </tr>
                    <tr ng-repeat="a in addresses" ng-click="rowClick(a.Line1,a.Line2,a.City,a.State)">
                        <td>{{a.Type}}</td>
                        <td>{{a.FormattedAddress}}</td>
                        <td>{{a.PhoneNumber}}</td>
                        <td class="invisible">{{a.Line1}}</td>
                        <td class="invisible">{{a.Line2}}</td>
                        <td class="invisible">{{a.City}}</td>
                        <td class="invisible">{{a.State}}</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="container" ng-show="showMap">
        <div class="panel panel-default">
            <div class="panel-heading">{{Lat}} / {{Lon}}</div>
            <div class="panel-body">
                <div id="mapPlaceholder" style="height:400px;width:700px;"></div>
            </div>
        </div>
    </div>
</div>