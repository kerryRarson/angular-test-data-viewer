<div class="container">
    <div class="row">
        <div class="alert alert-danger alert-dismissable" role="alert" ng-show="showAjaxError">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            {{ajaxError}}
        </div>
    </div>
    <div class="row">
        <div class="col-md-5">
            <form name="searchForm" ng-submit="searchByCity()" class="form-inline">
                <fieldset ng-disabled="searching">
                    <div class="form-group">
                        <select ng-options="st for st in states" ng-model="searchState" required class="form-control"></select>
                        <input ng-model="searchCity" ng-bind="searchCity" type="text" required placeholder="City" class="form-control"/>
                        <button type="submit" class="btn btn-primary">
                            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                        </button>
                    </div>
                </fieldset>
            </form>
        </div>
        <div class="col-md-7">
            <div ng-show="searching"><img src="~/Content/images/progress.gif" style="height:25px;width:25px;" />&nbsp; Searching...</div>
        </div>
    </div>
    <p></p>

    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">{{ searchResults.length}} Addresses</div>
            <div class="panel-body">
                <table class="table table-striped table-responsive">
                        <tr>
                            <th>Case #</th>
                            <th>Address</th>
                            <th>Phone</th>
                        </tr>
                        <tr>
                            <td></td>
                            <td><input type="text" ng-model="cityFilter" placeholder="Filter" class="form-control" ng-show="loaded" /></td>
                            <td></td>
                        </tr>
                        <tbody>
                            <tr data-ng-repeat="r in searchResults | filter:cityFilter">
                                <td><a ng-href="{{ buildPeopleUrl(r.Case)}}">{{r.Case}}</a></td>
                                <td>{{ r.FormattedAddress }}</td>
                                <td>{{ r.Phone }}</td>
                                <td><a ng-show="r.Lat != ''" ng-click="launchMap(r.Lon, r.Lat)"><span class="glyphicon glyphicon-map-marker"></span></a></td>
                            </tr>
                        </tbody>
                    </table>
            </div>
        </div>

    </div>
</div>